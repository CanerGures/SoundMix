<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dc9605c40c01ccd0131e8f8b499f32d6"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/imgb_mic"
        android:layout_width="134dp"
        android:layout_height="144dp"
        android:layout_margin="24dp"
        android:background="@drawable/ic_microphone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/imgb_pikachu"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/ic_pikachu_2" />

        <ImageButton
            android:id="@+id/imgb_snorlax"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/ic_snorlax" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/imgb_abra"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/ic_abra" />

        <ImageButton
            android:id="@+id/imgb_charmender"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:background="@drawable/ic_charmander" />

    </LinearLayout>
</LinearLayout>